@using GestaoDeEquipamentos.ConsoleApp.Models;

@model EditarEquipamentoViewModel;

﻿@{
    Layout = "_Layout";
    ViewBag.Titulo = "Edição de Equipamentos";
}

<div class="visualizar-cadastrar">
    <a href="/equipamentos/cadastrar">Cadastrar Novo Equipamento</a>
    <a href="/equipamentos/visualizar">Visualizar Equipamento</a>
</div>

<form class="forms" action="/equipamentos/editar/@Model.Id" method="post">

    <label for="Nome">Nome do Equipamento:</label>
    <br />
    <input type="text" name="Nome" id="Nome" value="@Model.Nome" />

    <br />

    <label for="PrecoAquisicao">Preço de Aquisição do Equipamento:</label>
    <br />
    <input type="text" name="PrecoAquisicao" id="PrecoAquisicao" value="@Model.PrecoAquisicao" />

    <br />

    <label for="DataFabricacao">Data de Fabricação do Equipamento:</label>
    <br />
    <input type="date" name="DataFabricacao" id="DataFabricacao" value="@Model.DataFabricacao.ToString("yyyy-MM-dd")" />

    <br />

    <label for="FabricanteId">Fabricante do Equipamento:</label>
    <br />
    <select name="FabricanteId" id="FabricanteId">
        @foreach (var fabricante in Model.FabricantesDisponiveis)
        {
            <option value="@fabricante.Id" @(fabricante.Id == Model.FabricanteId ? "selected" : "")>@fabricante.Nome</option>
        }
    </select>
    <br>
    <button class="botao-submit" type="submit">Gravar</button>
</form>
<hr />